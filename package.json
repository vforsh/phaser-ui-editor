{
	"name": "tekton-editor",
	"version": "0.0.10",
	"private": true,
	"description": "A desktop editor for creating and editing UI prefabs for Phaser 3 games",
	"author": {
		"name": "Vladislav Forsh",
		"email": "vlad@robowhale.com"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:vforsh/phaser-ui-editor.git"
	},
	"workspaces": [
		"packages/*"
	],
	"files": [
		"exports.d.ts"
	],
	"type": "module",
	"main": "out/main/index.js",
	"types": "exports.d.ts",
	"scripts": {
		"start": "node scripts/start-desktop-app-with-cleanup.mjs",
		"start:bg": "START_IN_BACKGROUND=1 node scripts/start-desktop-app-with-cleanup.mjs",
		"dev": "npm run start",
		"editorctl": "tsx --tsconfig packages/editorctl/tsconfig.json packages/editorctl/src/cli.ts",
		"editorctl:client-smoke": "tsx scripts/editorctl-client-smoke.ts",
		"build:editorctl": "tsc --project packages/editorctl/tsconfig.build.json",
		"build:editorctl-client": "tsc --project packages/editorctl-client/tsconfig.build.json",
		"build:control-rpc-contract": "tsc --project packages/control-rpc-contract/tsconfig.json",
		"build:json-schema-utils": "tsc --project packages/json-schema-utils/tsconfig.json",
		"build:packages": "npm run build:control-rpc-contract && npm run build:json-schema-utils && npm run build:editorctl-client && npm run build:editorctl",
		"link:editorctl": "npm run build:editorctl && npm link",
		"typecheck": "tsc --noEmit --project tsconfig.app.json",
		"typecheck-dev": "tsc --noEmit --watch --project tsconfig.app.json",
		"build": "electron-vite build",
		"test:e2e": "playwright test",
		"lint": "rg --files -g '*.ts' -g '*.tsx' -g '*.js' -g '*.jsx' | xargs oxlint --max-warnings 0",
		"lint:fix": "rg --files -g '*.ts' -g '*.tsx' -g '*.js' -g '*.jsx' | xargs oxlint --fix",
		"format": "oxfmt --write .",
		"preview": "electron-vite preview",
		"package": "npm run build && electron-builder",
		"package:mac:dir": "npm run build && electron-builder --mac --dir",
		"package:mac:dir:unsigned": "npm run build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --dir",
		"build-types": "node scripts/build-types.ts",
		"update-types": "node scripts/build-types.ts --push",
		"prepare": "simple-git-hooks"
	},
	"dependencies": {
		"@atlaskit/pragmatic-drag-and-drop": "^1.5.0",
		"@atlaskit/pragmatic-drag-and-drop-react-drop-indicator": "^1.2.0",
		"@electron-toolkit/preload": "^3.0.2",
		"@electron-toolkit/utils": "^4.0.0",
		"@koreez/phaser3-ninepatch": "^2.0.2",
		"@mantine/core": "^7.6.1",
		"@mantine/hooks": "^7.6.1",
		"@mantine/notifications": "^7.16.3",
		"@mantine/spotlight": "^8.3.12",
		"@needle-di/core": "^1.1.0",
		"@open-draft/deferred-promise": "^2.2.0",
		"@open-draft/until": "^2.1.0",
		"@renoun/screenshot": "^0.1.1",
		"@robowhale/phaser3-ninepatch-types-fix": "^1.0.4",
		"@sindresorhus/is": "^7.0.1",
		"@tekton/control-rpc-contract": "file:packages/control-rpc-contract",
		"@tekton/json-schema-utils": "file:packages/json-schema-utils",
		"@types/blueimp-md5": "^2.18.2",
		"@types/opentype.js": "^1.3.8",
		"@types/webfontloader": "^1.6.38",
		"@types/xml2js": "^0.4.14",
		"blueimp-md5": "^2.19.0",
		"clsx": "^2.1.1",
		"core-js": "^3.39.0",
		"css-element-queries": "^1.2.3",
		"derive-valtio": "^0.2.0",
		"dot-path-value": "^0.0.11",
		"es-toolkit": "^1.29.0",
		"fzf": "^0.5.2",
		"get-port": "^7.1.0",
		"json5": "^2.2.3",
		"lucide-react": "^0.471.0",
		"mantine-contextmenu": "^7.15.3",
		"minimatch": "^10.0.1",
		"nanoid": "^5.1.6",
		"neverthrow": "^8.1.1",
		"open": "^10.1.0",
		"opentype.js": "^1.3.4",
		"parse-bmfont-xml": "^1.1.6",
		"path-browserify-esm": "^1.0.6",
		"phaser": "^3.87.0",
		"pretty-bytes": "^6.1.1",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"sharp": "^0.33.5",
		"ts-pattern": "^5.5.0",
		"tslog": "^4.9.3",
		"type-fest": "^4.28.0",
		"valtio": "^2.1.2",
		"webfontloader": "^1.6.28",
		"ws": "^8.18.0",
		"xml2js": "^0.6.2",
		"zod": "^3.25.76",
		"zod-to-json-schema": "^3.25.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@playwright/test": "^1.57.0",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/fontkit": "^2.0.7",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^24.10.4",
		"@types/path-browserify": "^1.0.3",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@types/ws": "^8.18.1",
		"@vitejs/plugin-react": "^5.1.2",
		"autoprefixer": "^10.4.18",
		"commander": "^13.0.0",
		"dtsroll": "^1.4.1",
		"electron": "^39.2.7",
		"electron-builder": "^26.4.0",
		"electron-vite": "^5.0.0",
		"exit-hook": "^5.0.1",
		"fontkit": "^2.0.4",
		"fs-extra": "^11.2.0",
		"globby": "^14.0.2",
		"image-size": "^1.2.1",
		"lint-staged": "^16.2.7",
		"oxfmt": "^0.21.0",
		"oxlint": "^1.36.0",
		"postcss": "^8.4.35",
		"postcss-preset-mantine": "^1.13.0",
		"simple-git-hooks": "^2.11.1",
		"tailwindcss": "^3.4.19",
		"trash": "^10.0.1",
		"tsx": "^4.20.5",
		"typescript": "^5.9.3",
		"vite": "7.3.0",
		"vite-tsconfig-paths": "^6.0.3"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged",
		"commit-msg": "npx --no-install commitlint --edit \"$1\""
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,jsonc,json5,yaml,yml,html,css,scss,less,md,mdx,graphql,gql,toml}": [
			"oxfmt --write"
		]
	},
	"engines": {
		"node": ">=24.12.0"
	},
	"build": {
		"appId": "com.tekton.editor",
		"productName": "Tekton Editor",
		"directories": {
			"output": "dist"
		},
		"files": [
			"out/**/*",
			"package.json"
		],
		"asar": true,
		"mac": {
			"target": "dmg",
			"category": "public.app-category.developer-tools"
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": "AppImage"
		}
	},
	"productName": "Tekton Editor"
}
