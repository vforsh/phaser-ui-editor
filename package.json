		"start": "electron-vite dev",
		"dev": "electron-vite dev",
		"editorctl": "tsx scripts/editorctl/index.ts",
		"build:editorctl": "tsc --project tsconfig.editorctl.json",
		"link:editorctl": "npm run build:editorctl && npm link",
