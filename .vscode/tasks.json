{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Desktop App",
			"detail": "Runs electron-vite in dev mode (Vite dev server + Electron main/preload).",
			"type": "shell",
			"command": "npm run dev",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$tsc-watch"
			]
		},
		{
			"label": "Build Desktop App",
			"detail": "Builds main/preload/renderer bundles with electron-vite.",
			"type": "shell",
			"command": "npm run build",
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Preview Desktop App",
			"detail": "Previews the production build via electron-vite.",
			"type": "shell",
			"command": "npm run preview",
			"group": "build",
			"problemMatcher": []
		}
	]
}
