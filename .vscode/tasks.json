{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Dev",
			"dependsOrder": "parallel",
			"dependsOn": [
				"vite",
				"typecheck"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "start",
			"problemMatcher": [],
			"label": "vite",
			"detail": "vite --host",
			"isBackground": true
		},
		{
			"type": "npm",
			"script": "typecheck-dev",
			"problemMatcher": ["$tsc-watch"],
			"label": "typecheck",
			"detail": "tsc --noEmit --watch --pretty false --project tsconfig.app.json",
			"isBackground": true
		}
	]
}