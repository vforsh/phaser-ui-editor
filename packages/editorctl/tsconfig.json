{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"paths": {
			"@tekton/editorctl-client": ["../editorctl-client/src/index.ts"],
			"@tekton/control-rpc-contract": ["../control-rpc-contract/src/index.ts"],
			"@tekton/control-rpc-contract/*": ["../control-rpc-contract/src/*"],
			"@tekton/json-schema-utils": ["../json-schema-utils/src/index.ts"]
		},
		"outDir": "dist",
		"sourceMap": true,
		"declaration": false,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
