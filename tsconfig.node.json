{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2023"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,

		"baseUrl": ".",
		"paths": {
			"@state/*": ["./src/renderer/state/*"],
			"@logs/*": ["./src/renderer/logs/*"],
			"@url-params": ["./src/renderer/url-params"],
			"@components/*": ["./src/renderer/components/*"],
			"@utils/*": ["./src/renderer/utils/*"],
			"@hooks/*": ["./src/renderer/hooks/*"],
			"@tekton/control-rpc-contract": ["./packages/control-rpc-contract/src/index.ts"],
			"@tekton/control-rpc-contract/commands/*": ["./packages/control-rpc-contract/src/commands/*"],
			"@tekton/json-schema-utils": ["./packages/json-schema-utils/src/index.ts"]
		},
		"types": ["phaser", "vite/client"]
	},
	"include": ["electron.vite.config.ts", "src/main/**/*.ts", "src/preload/**/*.ts", "src/shared/**/*.ts", "types/**/*.d.ts"]
}
