{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"baseUrl": ".",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,

		"types": ["phaser"],

                "paths": {
                        "@state/*": ["./src/renderer/state/*"],
                        "@logs/*": ["./src/renderer/logs/*"],
                        "@url-params": ["./src/renderer/UrlParams.ts"],
                        "@components/*": ["./src/renderer/components/*"],
                        "@utils/*": ["./src/renderer/utils/*"],
                        "@hooks/*": ["./src/renderer/hooks/*"],
                }
        },
        "include": ["src/renderer", "types"],
        "exclude": ["exports.d.ts", "src/main", "src/preload", "src/renderer/backend-main", "src/renderer/backend-preload"]
}
